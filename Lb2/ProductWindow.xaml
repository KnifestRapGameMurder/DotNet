<Window x:Class="Lb2.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Products" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Add Product" Click="AddProduct_Click" Margin="5"/>
            <Button Content="Edit Product" Click="EditProduct_Click" Margin="5"/>
            <Button Content="Delete Product" Click="DeleteProduct_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>